@model Book


<tr>
    <td>@Model.BookID</td>
    <td>@Model.Title</td>
    <td>@Model.AuthorFirst</td>
    @if (Model.AuthorMiddle == "")
    {
        <td>--</td>
    }
    else
    {
        <td>@Model.AuthorMiddle</td>
    }
    <td>@Model.AuthorLast</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>$@Model.Price</td>
    <td>@Model.NumberOfPages</td>
    <td>
        <form id="@Model.BookID" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="BookID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </td>
</tr>
